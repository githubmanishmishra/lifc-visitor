        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/purpose_of_meeting">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/purposeof_coming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_Floor"
            android:text="@string/floor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginStart="10dp"/>
        <Spinner
            android:id="@+id/spinner_Floor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_confrence_room"
            android:text="@string/conference_room"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginStart="10dp"/>
        <Spinner
            android:id="@+id/spinner_conference"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/view_photo"
            android:layout_width="260dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_approve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_disapprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/disapprove"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"/>
        </LinearLayout>
        <EditText
            android:id="@+id/ev_disapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Remark*"
            android:textColorHint="@color/red"
            android:textColor="@color/red"
            android:visibility="invisible"/>
    </LinearLayout>
</ScrollView>