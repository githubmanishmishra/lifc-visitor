<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeDashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lifc_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/elipse_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse_1" />

        <ImageView
            android:id="@+id/elipse_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse_2" />

        <ImageView
            android:id="@+id/logo_3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/elipse_1"
            android:layout_centerInParent="true"
            android:src="@drawable/life_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_3"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Visitors"
            android:textColor="@color/pink"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/rl_vistorcount">
            <TextView
                android:id="@+id/total_visitor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Visitor Count"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/new_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Visitor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/total_visitor_count"
                android:layout_marginStart="20dp"
                android:padding="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
            <TextView
                android:id="@+id/my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile                "
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/request_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Pending"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/btn_bg_rectangle"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/my_profile"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:padding="10dp"/>
            </RelativeLayout>




        </RelativeLayout>
    </LinearLayout>
</ScrollView>